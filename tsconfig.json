{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // This ensures compiled files go to the dist folder
  },
  "include": ["src/**/*.ts"],  // This includes all .ts files in the src folder
  "exclude": ["node_modules"]
}